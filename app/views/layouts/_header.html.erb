<header class="navbar navbar-fixed-top " id="headerbg">
  <div class="container">
    <%= link_to image_tag("gpmlogo.png", height: '32', width: '32'), home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">

        <!-- Create Poly should only show up if the user is logged in -->
        <% if logged_in? %>
          <li><%= link_to "Profile", current_user %></li>
          <li><%= link_to "Create Poly", polies_new_path %></li>
        <% else %>
          <li><%= link_to "Login / Sign Up", login_path %></li>
        <% end %>
        <% if logged_in? && current_user.admin %>
          <li><%= link_to "List All Users", listusers_path %></li>
        <% end %>
        <!-- display these links no matter what -->
        <li><%= link_to "View All Poly's", polies_path %></li>
        <li><%= link_to "Support", support_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Github", "https://github.com/kinifi/poly-RoR-server" %></li>

        <!-- logout link is shown if the user is logged in -->
        <% if logged_in? %>
          <li><%= link_to "Log out", logout_path, method: "delete" %></li>
        <% end %>

      </ul>
    </nav>
  </div>
  <hr>
</header>
