<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <br>
    <br>
    <h1>Password Reset</h1>
    <br>
    <%= form_for(:reset, url: reset_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.submit "Email Password", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
